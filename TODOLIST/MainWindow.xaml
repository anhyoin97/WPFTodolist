<Window x:Class="TODOLIST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TODOLIST.ViewModels"
        Title="WPF TODO" Height="350" Width="400">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox Width="250" Text="{Binding NewTodo, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 10 0"/>
            <Button Content="추가" Command="{Binding AddCommand}" Width="100"/>
        </StackPanel>

        <ListBox Grid.Row="1" ItemsSource="{Binding TodoList}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock Text="{Binding Content}" VerticalAlignment="Center" Margin="0 0 10 0"/>
                        <Button Content="삭제" Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
